@using InternBook.Models
@model Product

<form method="post">
    <div class="border p-3 mt-3 mb-5">
        <div class="row pb-2">
            <h2>Delete Product</h2>
            <hr />
        </div>
        <div class="mb-3 p-1">
            <div class="mb-3 row">
                <div asp-validation-summary="All"></div>
                <label class="p0" asp-for="Title"></label>
                <input asp-for="Title" class="form-control" disabled/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label class="pt-2" asp-for="ISBN"></label>
                <input asp-for="ISBN" class="form-control" disabled />
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label class="pt-2" asp-for="Author"></label>
                <input asp-for="Author" class="form-control" disabled />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label class="pt-2" asp-for="Description"></label>
                <input asp-for="Description" class="form-control" disabled />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label class="pt-2" asp-for="ListPrice"></label>
                <input asp-for="ListPrice" class="form-control" disabled />
                <span asp-validation-for="ListPrice" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label class="pt-2" asp-for="Price"></label>
                <input asp-for="Price" class="form-control" disabled />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label class="pt-2" asp-for="Price50"></label>
                <input asp-for="Price50" class="form-control" disabled />
                <span asp-validation-for="Price50" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label class="pt-2" asp-for="Price100"></label>
                <input asp-for="Price100" class="form-control" disabled />
                <span asp-validation-for="Price100" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a class="btn btn-dark form-control" asp-controller="Product" asp-action="Index">
                    Back To List
                </a>
            </div>
        </div>


    </div>
</form>
