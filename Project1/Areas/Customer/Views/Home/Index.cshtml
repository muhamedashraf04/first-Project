@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="row p-1">
                    <div  class="card border-0 p-3 shadow border-top border-5 rounded">
                        <a asp-action="Details" asp-route-id="@product.Id">
                        <img src="@product.ImageURL" class="card-img-top rounded" />
                        </a>
                        <div class="card-body pb-0">
                            <div class=" pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
                                <p class="card-title text-warning text-center">by <b></b>@product.Author</p>
                            </div>
                            <div class=" pl-1">
                                <p class="card-title text-dark opacity-75 text-center mb-0">
                                   List Price: $
                                    <span class=" text-decoration-line-through">
                                        @product.ListPrice.ToString()
                                    </span>
                                </p>
                            </div>
                            <div class=" pl-1">
                                <p class="card-title text-dark opacity-75 text-center">
                                    As low as: $
                                    <span>
                                        @product.Price100.ToString()
                                    </span>
                                </p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details" asp-route-id="@product.Id" class="btn-primary bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    }

</div>